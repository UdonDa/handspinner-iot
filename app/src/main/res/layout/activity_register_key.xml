<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cerevo.blueninja.hyourowgan_ble_sample.RegisterKeyActivity">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ハンドスピナーKey登録"
        android:id="@+id/buttonRegisterKey" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="値"
        android:layout_below="@+id/buttonRegisterKey"
        android:id="@+id/textViewValues"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewKeyGyro"
        android:layout_below="@id/textViewValues"
        android:height="30dp"
        android:text="Gyro"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewKeyAccel"
        android:layout_below="@id/textViewKeyGyro"
        android:height="30dp"
        android:text="Accel"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewKeyMagm"
        android:layout_below="@id/textViewKeyAccel"
        android:height="30dp"
        android:text="Magm"/>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewKeyRotationNumber"
        android:layout_below="@id/textViewKeyMagm"
        android:height="30dp"
        android:text="RotationNum"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewKeyRotationNumber"
        android:id="@+id/buttonConnect"
        android:text="connect"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="not connected"
        android:id="@+id/textViewBleStatus"
        android:height="30dp"
        android:layout_below="@+id/buttonConnect" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Active"
        android:id="@+id/checkBoxActive"
        android:layout_below="@+id/textViewBleStatus"
        android:layout_alignParentStart="true"
        android:checked="false" />

</RelativeLayout>
