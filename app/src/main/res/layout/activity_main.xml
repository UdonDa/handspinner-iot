<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Handspinner-IoT." android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Motion Sensor Service"
        android:id="@+id/buttonShowMotionSensor"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="飯屋検索"
        android:id="@+id/buttonSearchGourmet"
        android:layout_below="@+id/buttonShowMotionSensor"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonTradeCard"
        android:text="名刺交換"
        android:layout_below="@+id/buttonSearchGourmet"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"/>
</RelativeLayout>
