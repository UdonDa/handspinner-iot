<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cerevo.blueninja.hyourowgan_ble_sample.SearchGourmetActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearGps">

        <Button
            android:id="@+id/buttonFetchGps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fetch GPS" />

        <TextView
            android:id="@+id/txvGps"
            android:layout_width="wrap_content"
            android:layout_below="@+id/buttonFetchGps"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="Location"/>


    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonGoogleMap"
        android:text="Search in GoogleMap"
        android:layout_below="@+id/linearGps"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/connect_button2"
        android:text="connect"
        android:layout_below="@+id/buttonGoogleMap"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />



</RelativeLayout>
